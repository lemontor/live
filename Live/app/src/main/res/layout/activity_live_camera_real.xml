<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/camera_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layout_preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">

        <ListView
            android:id="@+id/lv_content"
            android:layout_width="@dimen/dimen_568"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_22"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none">
        </ListView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/edt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_999999"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="@dimen/dimen_106"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="1dp"
            android:text="@string/TV_SEND"
            android:textColor="@color/color_34A446"
            android:textSize="@dimen/text_size_28" />

        <EditText
            android:id="@+id/edt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/tv_send"
            android:hint="@string/EDT_HINT"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen_45"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/color_666666"
            android:background="@drawable/bg_edt"
            android:textSize="@dimen/text_size_28" />



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_18"
        android:layout_marginLeft="@dimen/dimen_30"
        android:paddingRight="@dimen/dimen_36"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_centerVertical="true"
            android:src="@mipmap/pinglun"
            />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/guanbi" />

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_64"
            android:layout_toLeftOf="@+id/iv_cancel"
            android:src="@mipmap/jingtou" />

        <ImageView
            android:id="@+id/iv_beaty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_64"
            android:layout_toLeftOf="@+id/iv_camera"
            android:src="@mipmap/zhibo_meiyan"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="@dimen/dimen_240"
        android:layout_height="@dimen/dimen_60"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_41"
        android:layout_marginTop="@dimen/dimen_32"
        android:background="@drawable/drawable_live_person"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_24"
        android:gravity="center"
        android:visibility="gone"
         />

</RelativeLayout>
