<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_44000000"
    android:orientation="vertical">

    <com.example.user.live.live.CircleImageView
        android:id="@+id/circle_iv"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_200"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_184" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_18"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_32" />

    <TextView
        android:id="@+id/tv_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_70"
        android:text="直播已结束~"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_36" />

    <RelativeLayout
        android:id="@+id/layout_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notify"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_124"
        android:paddingTop="@dimen/dimen_75">

        <TextView
            android:id="@+id/tv_per_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_64"
            android:layout_toLeftOf="@+id/line"
            android:background="@drawable/bg_live_count"
            android:gravity="center"
            android:minHeight="@dimen/dimen_80"
            android:minWidth="@dimen/dimen_240"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_32" />

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/tv_cnt_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_64"
            android:layout_toRightOf="@+id/line"
            android:background="@drawable/bg_live_count"
            android:gravity="center"
            android:minHeight="@dimen/dimen_80"
            android:minWidth="@dimen/dimen_240"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_32" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_back"
        android:layout_width="@dimen/dimen_568"
        android:layout_height="@dimen/dimen_80"
        android:layout_below="@id/layout_count"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_live_btn"
        android:gravity="center"
        android:text="@string/TV_BACK"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_32" />


</RelativeLayout>