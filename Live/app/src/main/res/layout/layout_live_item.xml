<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen_18"
    android:paddingBottom="@dimen/dimen_20">
    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/dimen_320"
        android:layout_height="@dimen/dimen_160"
        android:layout_marginLeft="@dimen/dimen_22"
        android:layout_marginRight="@dimen/dimen_20"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pic"
        android:layout_alignTop="@+id/iv_pic"
        android:paddingTop="@dimen/dimen_8"
        android:textSize="@dimen/text_size_30"
        android:textColor="@color/color_333333"
        android:paddingRight="@dimen/dimen_22"
        android:maxLines="1"
        android:text="asdfasd"/>
    <TextView
        android:id="@+id/tv_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pic"
        android:layout_alignBottom="@+id/iv_pic"
        android:textSize="@dimen/text_size_28"
        android:textColor="@color/color_666666"
        android:paddingRight="@dimen/dimen_22"
        android:drawableLeft="@mipmap/xuexiao"
        android:drawablePadding="@dimen/dimen_10"
        android:maxLines="1"
        android:text="枣庄学院"
        android:paddingBottom="@dimen/dimen_64"/>
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pic"
        android:layout_alignBottom="@+id/iv_pic"
        android:textSize="@dimen/text_size_28"
        android:textColor="@color/color_666666"
        android:paddingRight="@dimen/dimen_22"
        android:drawableLeft="@mipmap/banji"
        android:drawablePadding="@dimen/dimen_10"
        android:maxLines="1"
        android:text="32人"
        android:paddingBottom="@dimen/dimen_20"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_pic"
        android:textSize="@dimen/text_size_28"
        android:textColor="@color/color_666666"
        android:paddingRight="@dimen/dimen_22"
        android:maxLines="1"
        android:text="正在直播"
        android:paddingBottom="@dimen/dimen_20"/>


</RelativeLayout>